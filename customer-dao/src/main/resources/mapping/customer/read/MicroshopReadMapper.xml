<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pzj.core.customer.read.MicroshopReadMapper">
    <sql id="Base_Column_List">
        id,
        user_id,
        name,
        intro,
        avatar,
        phone_num,
        create_date,
        update_date
    </sql>
    <resultMap id="BaseResultMap" type="com.pzj.core.customer.microshop.MicroshopEntity">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="user_id" property="masterId" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="intro" property="intro" jdbcType="VARCHAR" />
        <result column="avatar" property="avatar" jdbcType="VARCHAR" />
        <result column="phone_num" property="phoneNum" jdbcType="VARCHAR" />
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
        <result column="update_date" property="updateDate" jdbcType="TIMESTAMP" />
    </resultMap>
    <select id="selectMicroshopByMasterId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List" /> from sys_user_microshop where
        user_id = #{masterId, jdbcType=BIGINT}
    </select>
</mapper>